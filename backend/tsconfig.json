{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "watch": true,
        "lib": ["dom", "ES2017"],
        "noImplicitAny": true,
        "moduleResolution": "node16",
        "outDir": "dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "../node_modules/*",
            ]
        }
    },
    "ts-node": {
        "esm" : true
    },
    "include": [
        "src/**/*.ts"
    ]
}